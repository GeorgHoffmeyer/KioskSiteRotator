{
  "manifest_version": 2,
  "name": "Kiosk Website Rotator",
  "description": "This extension rotates diffrent websites",
  "version": "1.0",
  "browser_action": {
    "default_title": "Start Kiosk Mode",
    "default_icon": "img/stop.png"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "js/background.js",
      "js/helper.js",
      "third-party/jquery-3.3.1.min.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "cookies",
    "alarms",
    "webNavigation",
    "http://*/*",
    "https://*/*"
  ]
}